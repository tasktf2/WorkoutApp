<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <androidx.appcompat.widget.Toolbar
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="2"
        android:background="@drawable/bg_rounded_24"
        android:elevation="24dp">

        <ToggleButton
            android:id="@+id/btn_play"
            style="@style/Widget.Button.Toggle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginVertical="-16dp"/>
    </FrameLayout>

    <TextView
        android:id="@+id/btn_tr_settings"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:text="Training settings"
        style="@style/Widget.AppCompat.TextView.toButton"/>

    <TextView
        android:id="@+id/btn_history"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:text="Training history"
        style="@style/Widget.AppCompat.TextView.toButton"/>

    <TextView
        android:id="@+id/btn_graphs"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:text="Graphs"
        style="@style/Widget.AppCompat.TextView.toButton"/>

</LinearLayout>